# Docker container runtime env (used by docker-compose app service)
NODE_ENV=development

# Public (client)
NEXT_PUBLIC_APP_NAME=Schoolverse_1
NEXT_PUBLIC_SOCKET_URL=http://localhost:3000

# Server / Database (service names inside the compose network)
DATABASE_URL=postgresql://postgres:postgres@db:5432/schoolverse?schema=public

# Auth
JWT_SECRET=change_me_docker
JWT_EXPIRES_IN=1d

# Optional services
REDIS_URL=redis://redis:6379

# Postgres service (overrides defaults if desired)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=schoolverse
